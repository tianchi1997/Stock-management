<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current</th>
      <th>Required</th>
      <th>Order To</th>
    </tr>
  </thead>

  <tbody>
    <%# Render each item as clickable table row %>
    <% items.each do |item| %>
      <tr class="clickable-row" data-url='<%= url_for(item) %>'>
        <td><%= item.send(name_type).name %></td> <%# Get attribute specified by name_type parameter %>
        <td><%= item.item_summary.total %> (<%= item.item_summary.total_all %>)</td>
        <td><%= item.required  %></td>
        <td><%= item.order_to %></td>
      </tr>
    <% end %>
  </tbody>
</table>

