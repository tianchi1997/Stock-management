<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current</th>
      <th>Required</th>
      <th>Order To</th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr class="clickable-row" data-url='<%= url_for(item) %>'>
        <td><%= item.send(name_type).name %></td>
        <td><%= item.total  %></td>
        <td><%= item.required  %></td>
        <td><%= item.order_to %></td>
      </tr>
    <% end %>
  </tbody>
</table>

