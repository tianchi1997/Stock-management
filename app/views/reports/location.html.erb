<h1>Reports:  locations</h1>
<h2>Location ID: <%= @location.id %></h2> 
<table class="table">
  <%# Header Row %>
  <tr>
    <th class="border">Stock Item</th>
    <th class="border">Amount / Required</th>
    <th class="border">Order To</th>
    <% if @order_to %>
      <th class="border">Amount to Order</th>
    <% end %>
  </tr>
  <% if @display_tree %>
    <%= render "reports/tree", location_tree: @location_tree, order_to: @order_to, expiries: @expiries %>
  <% else %>
    <%= render "reports/location_summary", location: @location, order_to: @order_to, expiries: @expiries, depth: 0 %>
  <% end %>
</table>
