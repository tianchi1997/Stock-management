<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <% headers.each do |th| %>
        <th><%= th %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% table.each do |row| %>
      <tr class="clickable-row" data-url='<%= row[0] %>'>
        <% row.drop(1).each do |td| %>
          <td><%= td %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

