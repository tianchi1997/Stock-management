<h1>Users</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Permission Level</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="clickable-row" data-url="<%= user_path(user) %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.permission_level %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path %>
