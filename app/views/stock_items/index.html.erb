<p id='notice'><%= notice %></p>

<h1>Stock Items</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Item Code</th>
      <th>Name</th>
      <th>Supplier</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @stock_items.each do |stock_item| %>
      <tr class="clickable-row" data-url="<%= url_for(stock_item) %>">
        <td><%= stock_item.item_code %></td>
        <td><%= stock_item.name %></td>
        <td><%= stock_item.supplier %></td>
        <td><%= stock_item.item_expiries.sum(:count) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock Item', new_stock_item_path %>
