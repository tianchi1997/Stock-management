<p id="notice"><%= notice %></p>

<p>
  <strong>Parent Location:</strong>
  <%= @location.parent_name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<h2>Items</h2>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="border columnwidth">Name</th>
      <th class="border columnwidth">Count</th>
      <th class="border columnwidth">Order To</th>
      <th class="border columnwidth">Current</th>
      <th colspan="3" class="border"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.items.each do |item| %>
      <tr>
        <td><%= item.stock_item.name %></td>
        <td><%= item.required %></td>
        <td><%= item.order_to %></td>
        <td><%= item.item_expiries.sum(:count)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Item', new_item_path(location_id: @location) %>

<h2>Sublocations</h2>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr >
      <th class="border columnwidth">Name</th>
      <th class="border columnwidth">Description</th>
      <th colspan="3" class="border"></th>
    </tr>
  </thead>

  <tbody>
  </tbody>
</table>



<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Delete', @location, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', locations_path %>
